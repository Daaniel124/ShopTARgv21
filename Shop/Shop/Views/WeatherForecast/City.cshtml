@model Shop.Models.WeatherForecast.CityViewModel
<h1>City</h1>

<div>
    <div>
        <h2>Forecast for the selected city</h2>

        <dl class="row">
            <label asp-for="LocalObservationDateTime"></label>
            <span class="badge" style="color: black !important">@Model.LocalObservationDateTime</span>
            <br />

            <label asp-for="EpochTime"></label>
            <span class="badge" style="color: black !important">@Model.EpochTime</span>
            <br />

            <label asp-for="WeatherText"></label>
            <span class="badge" style="color: black !important">@Model.WeatherText</span>
            <br />

            <label asp-for="WeatherIcon"></label>
            <span class="badge" style="color: black !important">@Model.WeatherIcon</span>
            <br />

            <label asp-for="HasPrecipitation"></label>
            <span class="badge" style="color: black !important">@Model.HasPrecipitation</span>
            <br />

            <label asp-for="IsDayTime"></label>
            <span class="badge" style="color: black !important">@Model.IsDayTime</span>
            <br />

            <label asp-for="MobileLink"></label>
            <span class="badge" style="color: black !important">@Model.MobileLink</span>
            <br />

            <label asp-for="Link"></label>
            <span class="badge" style="color: black !important">@Model.Link</span>
            <br />

            <label asp-for="TempMetricValue"></label>
            <span class="badge" style="color: black !important">@Model.TempMetricValue</span>
            <br />

            <label asp-for="TempMetricUnit"></label>
            <span class="badge" style="color: black !important">@Model.TempMetricValue</span>
            <br />

            <label asp-for="TempMetricUnitType"></label>
            <span class="badge" style="color: black !important">@Model.TempMetricUnitType</span>
            <br />

            <label asp-for="TempImperialValue"></label>
            <span class="badge" style="color: black !important">@Model.TempImperialValue</span>
            <br />

            <label asp-for="TempImperialUnit"></label>
            <span class="badge" style="color: black !important">@Model.TempImperialUnit</span>
            <br />

            <div class="form-group row">
                <label asp-for="TempImperialUnitType" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.TempImperialUnitType)
            </div>
        </dl>
    </div>
</div>