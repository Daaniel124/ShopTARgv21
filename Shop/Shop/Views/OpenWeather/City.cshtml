@model Shop.Models.OpenWeather.CityViewModel
<h1>Open Weather</h1>

<div class="container">
    <div class="form-group col-md-3">
        <label>City: </label>
        <span class="badge" ">Tallinn</span>
        <br />

        <label asp-for="temp">Temperature: </label>
        <span class="badge">@Model.temp °C</span>
        <br />

        <label asp-for="feels_like">Temp feels like: </label>
        <span class="badge">@Model.feels_like °C</span>
        <br />

        <label asp-for="pressure">Pressure: </label>
        <span class="badge">@Model.pressure Hpa</span>
        <br />

        <label asp-for="humidity">Humidity: </label>
        <span class="badge">@Model.humidity%</span>
        <br />

        <label asp-for="wind_speed">Wind Speed: </label>
        <span class="badge">@Model.wind_speed Km/h</span>
        <br />

        <label asp-for="main">Weather Condition: </label>
        <span class="badge">@Model.main</span>
        <br />

        <a asp-action="Back" asp-controller="OpenWeather" class="btn btn-primary">Return</a>

    </div>
</div>